  <script>
// Get all the action buttons
    const actionButtons = document.querySelectorAll('.action-button');

// Attach a click event listener to each button
    actionButtons.forEach(button => {
      button.addEventListener('click', function() {
        const status = this.getAttribute('data-status');

        if (status === 'pending') {
            // Mark as done and change the last column text to 'Done'
          this.textContent = 'Cancel';
          this.setAttribute('data-status', 'done');
          updateLastColumn(this.parentElement.parentElement, 'Done');
        } else if (status === 'done') {
            // Mark as cancelled and change the last column text to 'Cancelled'
          this.textContent = 'Done';
          this.setAttribute('data-status', 'cancelled');
          updateLastColumn(this.parentElement.parentElement, 'Cancelled');
        }
      });
    });

    function updateLastColumn(row, status) {
      const lastCell = row.lastElementChild;
      lastCell.textContent = status;
    }

  </script>

