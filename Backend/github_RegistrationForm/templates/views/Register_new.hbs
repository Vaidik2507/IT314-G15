     <script>
    function validateName() {
  var nameInput = document.getElementById('Name');
  var nameValue = nameInput.value.trim();

  // Regular expression to check if the value contains only alphabets and spaces
  var regex = /^[A-Za-z\s]+$/;

  // Check if the value matches the regular expression
  if (!regex.test(nameValue)) {
    document.getElementById('nameError').textContent = 'Name should contain only alphabets and spaces.';
    nameInput.setCustomValidity('Invalid name'); // Set custom validity to prevent form submission
  } else {
    document.getElementById('nameError').textContent = '';
    nameInput.setCustomValidity(''); // Reset custom validity
  }
}

    function validatePhone() {
      var phoneInput = document.getElementById('Phone');
      var phoneValue = phoneInput.value.trim();

      // Regular expression to check if the value is a 10-digit number
      var regex = /^\d{10}$/;

      // Check if the value matches the regular expression
      if (!regex.test(phoneValue)) {
        document.getElementById('phoneError').textContent = 'Phone number should be a 10-digit number.';
        phoneInput.setCustomValidity('Invalid phone number'); // Set custom validity to prevent form submission
      } else {
        document.getElementById('phoneError').textContent = '';
        phoneInput.setCustomValidity(''); // Reset custom validity
      }
    }

    function validatePostalCode() {
      var postalCodeInput = document.getElementById('AddressPostalCode');
      var postalCodeValue = postalCodeInput.value.trim();

      // Regular expression to check if the value is a 6-digit number
      var regex = /^\d{6}$/;

      // Check if the value matches the regular expression
      if (!regex.test(postalCodeValue)) {
        document.getElementById('postalCodeError').textContent = 'Postal code should be a 6-digit number.';
        postalCodeInput.setCustomValidity('Invalid postal code'); // Set custom validity to prevent form submission
      } else {
        document.getElementById('postalCodeError').textContent = '';
        postalCodeInput.setCustomValidity(''); // Reset custom validity
      }
    }

    function validatePassword() {
      var passwordInput = document.getElementById('password');
      var passwordValue = passwordInput.value;

      // Define password constraints
      var minLength = 8;
      var hasUppercase = /[A-Z]/.test(passwordValue);
      var hasLowercase = /[a-z]/.test(passwordValue);
      var hasNumber = /\d/.test(passwordValue);
      var hasSpecialChar = /[!@#$%^&*(),.?":{}|<>]/.test(passwordValue);

      // Check if password meets the criteria
      if (
        passwordValue.length < minLength ||
        !hasUppercase ||
        !hasLowercase ||
        !hasNumber ||
        !hasSpecialChar
      ) {
        document.getElementById('passwordError').textContent = 'Password should be at least 8 characters long and include at least one uppercase letter, one lowercase letter, one number, and one special character.';
        passwordInput.setCustomValidity('Invalid password'); // Set custom validity to prevent form submission
      } else {
        document.getElementById('passwordError').textContent = '';
        passwordInput.setCustomValidity(''); // Reset custom validity
      }
    }

    function validateForm() {
      // Additional validation logic can be added here
      // If all validations pass, return true to allow form submission
      // If any validation fails, return false to prevent form submission
      validateName();
      validatePhone();
      validatePostalCode();
      validatePassword();

      // Check if there are any custom validity messages set
      var inputs = document.getElementsByTagName('input');
      for (var i = 0; i < inputs.length; i++) {
        if (inputs[i].checkValidity() === false) {
          return false; // Prevent form submission if any input has a custom validity message
        }
      }

      return true; // Allow form submission if all validations pass
    }
  </script>
 
  
