    </tr>
       {{#each appointments}}
    <tr>
        <td>{{this.ID}}</td>
        <td>{{this.Patient}}</td>
        <td>{{this.AppointmentDate}}</td>
        <!-- <td>AB</td> -->
            <form action="/viewPatientDetails" method="post" style="display: flex; align-items: center;">
            <input type="hidden" name="ID" value="{{this.ID}}">
            <input type="hidden" name="AppointmentDate" value="{{this.AppointmentDate}}">
             <input type="hidden" name="Doctor" value="{{this.Doctor}}">
            <td> <button  type="submit"  style="margin-top: -10px; padding: 2px 8px; font-size: 12px;">View</button></td>
            </form>
        {{!-- <td><a href="/new_doc_patient_det">View</a></td> --}}
