    <div class="box">
        <form action="/submitPrescription" method="post">
        <div class="obs">
            <p style="text-align: center; font-style: italic;">Observation & Prescription</p>
        </div>
        <hr>
        <div class="ent">Enter Patient id:</div>
        
        <textarea  class="txt" name="ID" id="ID" cols="20"   rows="1" placeholder="Enter patient id here" style="width: 200px;"></textarea>
        <br>
         
        <br>
         <div class="ent">Enter Doctor Name:</div>
        
        <textarea  class="txt" name="Doctor" id="Doctor" cols="20" rows="1" placeholder="Enter Doctor Name here" style="width: 200px;"></textarea>

         <br>
         
        <br>  
         <label class="ent" >Enter Date:</label>
      <input class="txt" type="date" id="AppointmentDate" name="AppointmentDate" style="width: 200px;"required>   

      <br>
      <br>

        <div class="sym1">Symptoms:
            <div class="Note1">*NOTE: use , for separation </div>
        </div> 
        <textarea class="sym" name="Symptoms" id="Symptoms" cols="50" rows="3" placeholder="eg: #fever #headache #bodypain" style="width:300px;"></textarea>
        <br>

        <br>
        <div class="dig">Diagnosis:</div> 
        <textarea  class="dig1" name="Diagnoses" id="Diagnoses" cols="50" rows="3" placeholder="eg. Malaria" style="width: 300px;"></textarea>
        <br>
        <br>
        <div class="med">Medinice and Dosage:    
            <div class="Note">*NOTE: use @ to mention dose in a day</div>
        </div> 
        <textarea class="med1" name="Medicines" id="Medicines" cols="50" rows="3" placeholder="#paracetamol@2" style="width: 300px;"></textarea>
        <br>
        <br>
        <div class="do">Do's:</div> 
        <textarea class="do1" name="Dos" id="Dos" cols="50" rows="3" placeholder="eg. #do1#do2" style="width: 300px;"></textarea>

        <br>
        <br>
        <div class="ndo">Not Do's:</div> 
        <textarea class="ndo1" name="NotDos" id="NotDos" cols="50" rows="3" placeholder="eg. #notdo1#notdo2" style="width: 300px;"></textarea>

        <br>
        <br>
        <div class="inv ">Investigations:</div> 
        <textarea class="inv1" name="Investigations" id="Investigations" cols="50" rows="3" placeholder="" style="width: 300px;"></textarea>

        <br>
        <br>
        <div class="date">Follow up date:</div> 
        {{!-- <textarea class="date1" type="date" name="FollowUpDate" id="FollowUpDate" cols="20" rows="1" placeholder="" style="width: 150px;"></textarea> --}}
        {{!-- <label class="ent"  for="dob">Enter Date:</label> --}}
      <input class="txt" type="date" id="FollowUpDate" name="FollowUpDate" style="width: 200px;"required>   

    </div>
    
<br> 
    
